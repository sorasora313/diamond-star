<div class="card">

<%= link_to night_path(night.id),method: :get do %>
 <%= image_tag night.image, class: :card__img if night.image.attached? %>
 <% end %>
  
<div class="card__body">
    <%= link_to  night.title, night_path(night.id),method: :get, class: :card__title%>
     
    <p class="card__summary">
      <%= "ジャンル: #{night.genre.name}" %>
     <br> <%= "地域: #{night.state.name}" %>
     <br><%= "説明: #{night.explain}"%>
    </p>
      <%= link_to  "#{night.user.name}の投稿", root_path,class: :card__user %>
  </div>
</div>