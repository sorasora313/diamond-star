<%= form_with model: @night, local: true do |f|%>

 <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"night_image" %>
  </div>

  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"night_title" %>
  </div>

  <div class="field">
    <%= f.label :state, "地域" %><br />
    <%= f.collection_select(:state_id, State.all, :id, :name, {}, {class:"form__text", id:"night_catch_copy"}) %>
  </div>
  <div class="field">
    <%= f.label :genre, "ジャンル" %><br />
   <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form__text", id:"night_catch_copy"}) %>
  </div>

  <div class="field">
    <%= f.label :explain, "説明" %><br />
    <%= f.text_area :explain, class: :form__text, id:"night_concept" %>
  </div>

 
  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>